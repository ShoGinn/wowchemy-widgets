{
  "scripts": {
    "build": "rimraf ./public ./resources ./_vendor",
    "start:dev": "npm run build && hugo server --gc --source 'demo'",
    "prod": "npm run build && hugo --gc --minify --source 'demo'",
    "dev": "npm run build && hugo --gc --source 'demo'",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --write",
      "cspell"
    ]
  },
  "devDependencies": {
    "cspell": "^6.8.1",
    "html-validate": "^7.3.3",
    "html-validate-markdown": "^3.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "prettier": "^2.7.1",
    "prettier-plugin-go-template": "^0.0.13"
  }
}
